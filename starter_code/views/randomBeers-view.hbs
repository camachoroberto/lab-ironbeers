<section class="card-random">
    <div class="grow1 image-random">
        <img class="" src="{{this.image_url}}" alt="Card image cap">
    </div>
    <div class="grow1 card-body-random">
        <h1 class="card-title"><strong>{{this.name}}</strong></h1>
        <h2>{{this.tagline}}</h2>
        <p class="card-text">{{this.description}}
        </p>
        <h3><strong>Fodd Pairing</strong></h3>
        <ul>
            {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><b>Brewers Tips: </b>{{this.brewers_tips}}</p>
    </div>
</section>